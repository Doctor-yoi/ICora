                                           x:Name="ICoraVersion"
                                           Text=""
                                           Style="{StaticResource TextBlockDefaultSecLight}"
                                           Margin="20,301,0,0"
                                           VerticalAlignment="Top"
                                           Width="703"
                                           Height="15"
                                           Foreground="#FF9E9E9E" />
                                <Label BorderThickness="0"
                                       Background="#913F3F46"
                                       Foreground="White"
                                       Height="51"
                                       Width="802"
                                       Margin="0,336,0,0"
                                       VerticalAlignment="Top" />
