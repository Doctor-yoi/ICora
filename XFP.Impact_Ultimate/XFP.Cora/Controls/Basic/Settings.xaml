                                        Margin="723,502,0,0"
                                        VerticalAlignment="Top"
                                        Width="66"
                                        Height="30" />
                                <TextBlock HorizontalAlignment="Left"
                                           Text="加入开发者团队"
                                           Style="{StaticResource TextBlockSubTitle}"
                                           Margin="20,498,0,0"
                                           VerticalAlignment="Top"
                                           Width="703"
                                           Height="22" />
