                                           Margin="20,520,0,0"
                                           VerticalAlignment="Top"
                                           Width="703"
                                           Height="15"
                                           Foreground="#FF9E9E9E" />
                                <Button x:Name="CopyICoraID"
                                    Click="CopyICoraID_Click"
                                    Content="复制"
                                    HorizontalAlignment="Left"
                                    Margin="723,220,0,0"
                                    VerticalAlignment="Top"
                                    Width="66"
                                    Height="30" />
